
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box bac">
            <div class="box-header">
                <h3 class="titulo">Dashboard Citas Diarias y Razones de Cancelación</h3>
            </div>
            <div class="box-body">
                <div class="row nomargin" style="margin-bottom: 25px !important">
                    <div class="col-sm-3">
                        <label class="control-label">Centro de fidelización</label>
                        <select class="form-control requerido" data-requerido="true" id="cmb_sucursal" attr-message="Es un campo requerido!">
                            <option value="-1">Ninguna</option>
                        </select>
                        <div class="validation-error"><p></p></div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group input-group-sm" id="div_tipo_razon">
                            <label for="cod_tipo_razon">Tipo de Razon</label>
                            <select id="cod_tipo_razon" class="requerido" data-requerido="true" attr-message="Es un campo requerido!"></select>
                            <div class="validation-error"><p></p></div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group input-group-sm" id="div_razon">
                            <label for="cod_razonp">Razon</label>
                            <select id="cod_razonp" class="requerido" data-requerido="true" attr-message="Es un campo requerido!"></select>
                            <div class="validation-error"><p></p></div>
                        </div>
                    </div>
                    <div class="form-group input-group-sm date col-sm-3">
                        <label for="txt_fecha1">Fecha</label>
                        <div class='input-group input-group-sm date' id="fecha1">
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                            <input type='text' class="form-control limpiar requerido" data-requerido="true" id="txt_fecha1" readonly="" attr-message="Es un filtro requerido!">
                            <div class="validation-error"><p></p></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-md-offset-5">
                        <button type="button" class="btn btn-md btn-primary" id="btn_crear_reporte">Generar reporte</button>
                    </div>
                </div>
                <div class="bac-table-panel">
                    <table class="table list-table table-bordered display" id="tableCitas">
                        <thead>
                            <tr class="">
                                <th width="5%">Nro</th>
                                <th width="10%">Identidad</th>
                                <th width="10%">Nombre</th>
                                <th width="10%">Trámite</th>
                                <th width="10%">Escritorio/Cubiculo</th>
                                <th width="15%">Hora inicio</th>
                                <th width="15%">Hora final</th>
                                <th width="10%">Razón cancelación</th>
                                <th hidden="hidden"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody_citas_estado"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/js/dashboard_citas_diarias.js")
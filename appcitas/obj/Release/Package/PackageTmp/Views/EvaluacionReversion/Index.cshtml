                                                    @Html.ValidationMessageFor(model => model.FechaCargo_3, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <br />
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <strong>#4</strong>
                                            </div>
                                            <div class="col-md-11">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.TipoReversionId_4, htmlAttributes: new { @class = "control-label" })

                                        <hr />
                                        <br />
                                        <div class="row">
                                            <div class="col-md-1">
                                                <strong>#3</strong>
                                            </div>
                                            <div class="col-md-11">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.TipoReversionId_3, htmlAttributes: new { @class = "control-label" })
                                                    <input class="hidden" id="TipoReversionId_3" />

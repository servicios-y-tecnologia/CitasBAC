@model IEnumerable<appcitas.Dtos.ResultadoReversionDto>

@if (ViewBag.Buro)
{
    <div class="alert alert-danger">
        <strong>Este cliente presenta estado de Buro Rojo, referir al departamento de Recuperacion de Mora/Cobros</strong>
    </div>
}
else
{
    if (Model != null && Model.Count() > 0)
    {
        <div class="form-group">
            <label for="cbxResultados" class="control-label">Resultados Obtenidos</label>
            @Html.DropDownList("cbxResultadosReversion", new SelectList(Model, "ResultadoReversionId", "ResultadoReversionDescripcion"), "seleccione un resultado", new { @class = "form-control", @onChange = "cbxResultadosReversionOnChange(event)" })
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Este cliente no aplica a ningun beneficio</strong>
        </div>
    }
}

    <div class="form-group">
        <label for="resultadoAceptadoReversion" class="control-label">Resultado Aceptado por el Cliente? <input type="checkbox" class="checkbox" id="resultadoAceptadoReversion" required onchange="AceptadoReversionChange(event)" /></label>
    </div>


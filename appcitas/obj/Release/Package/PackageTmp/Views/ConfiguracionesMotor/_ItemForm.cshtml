@model appcitas.Dtos.ItemDeReclamoDto

<form id="CreateEditItemForm">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ReclamoId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReclamoId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        @if (Model.ItemDeReclamoId == "" || String.IsNullOrEmpty(Model.ItemDeReclamoId))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ItemDeReclamoId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemDeReclamoId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemDeReclamoId, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ItemDeReclamoId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemDeReclamoId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
        }
                
        <div class="form-group">
            @Html.LabelFor(model => model.ItemDeReclamoDescripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ItemDeReclamoDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ItemDeReclamoDescripcion, "", new { @class = "text-danger" })
            </div>
        </div>


        @if (Model.ItemDeReclamoId == "" || String.IsNullOrEmpty(Model.ItemDeReclamoId))
        {
            <div class="form-group">
                <div class="col-md-12">
                    <button onclick="GuardarItem(event)" style="margin-left: 5px;" type="button" value="Crear" class="btn btn-primary pull-right">  Crear</button>
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-12">
                    <button onclick="GuardarItem(event)" style="margin-left: 5px;" type="button" value="Guardar" class="btn btn-danger pull-right">  Guardar</button>
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        }
    </div>
</form>
